<com.wapmadrid.utilities.NowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/itemCapitanLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:padding="5dp" >
    
	    <com.wapmadrid.utilities.RoundedImageView
	            android:id="@+id/imagenLayout"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_centerHorizontal="true"
	            android:adjustViewBounds="true"
	            android:cropToPadding="true"
	            android:scaleType="fitXY" />

	    <TextView
	        android:id="@+id/txtLayout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="70dp"
	        android:layout_centerHorizontal="true"
	        android:text="Item Name"
	        style="@style/TextView.Black"
	        android:gravity="center"
	        android:textAppearance="?android:attr/textAppearance" />

    	</RelativeLayout>
</com.wapmadrid.utilities.NowLayout>
