<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.wapmadrid.activities.SplashActivity" >
	    
	    <ProgressBar
        android:id="@+id/pgCMDescripcion"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
	
	    <com.android.volley.toolbox.NetworkImageView
	        android:id="@+id/imageSanidad"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:layout_alignParentLeft="true" />
	
	    <TextView
	        android:id="@+id/textPoblacion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textDireccionCentro"
	        android:layout_below="@+id/textDireccionCentro"
	        android:layout_marginTop="10dp"
	        android:text="Madrid"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/textCP"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textDireccionCentro"
	        android:layout_marginTop="10dp"
	        android:layout_alignRight="@+id/textDireccionCentro"
	        android:layout_marginRight="20dp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <fragment
	        android:id="@+id/mapCentroMedico"
			class="com.google.android.gms.maps.MapFragment"
			android:name="com.google.android.gms.maps.MapFragment"
	        android:layout_width="wrap_content"
	        android:layout_height="300dp"
	        android:layout_alignParentBottom="true"
	        android:layout_below="@+id/textTelefono"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp" >
	     </fragment>

	    <TextView
	        android:id="@+id/textNombreCentro"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/imageSanidad"
	        android:layout_marginLeft="15dp"
	        android:layout_alignTop="@+id/imageSanidad"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/textDireccionCentro"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textNombreCentro"
	        android:layout_alignLeft="@+id/textNombreCentro"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <TextView
	        android:id="@+id/textHorario"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/imageSanidad"
	        android:layout_below="@+id/imageSanidad"
	        android:layout_marginTop="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/textTelefono"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textHorario"
	        android:layout_below="@+id/textHorario"
	        android:layout_marginTop="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	</RelativeLayout>

</RelativeLayout>