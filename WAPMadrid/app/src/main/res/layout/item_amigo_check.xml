<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/itemCapitanLayout"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_margin="15dp"
        android:padding="10dp">
        
        <CheckBox
	       android:id="@+id/checkBoxCapitanLayout"
	       android:layout_width="wrap_content"
	       android:layout_height="fill_parent"
	       android:layout_alignParentLeft="true"
	       android:layout_centerVertical="true"/>
    
	    <ImageView
            android:id="@+id/imagenAmigoCheck"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:layout_centerVertical="true"
            android:scaleType="center" 
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/checkBoxCapitan"
            android:layout_toEndOf="@+id/checkBoxCapitan"/>
	     
	    <TextView
	        android:id="@+id/txtAmigoCapitan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_alignParentRight="true"
	        android:text="Item Name"
	        android:textAppearance="?android:attr/textAppearance" 
	        android:layout_marginRight="15dp"
	        android:layout_centerVertical="true"/>

    	</RelativeLayout>
</RelativeLayout>
