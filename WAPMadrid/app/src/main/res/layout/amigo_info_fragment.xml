<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ProgressBar
        android:id="@+id/pgAmigoView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgAmigo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtNombreyApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgAmigo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombreyApellidos"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCiudad"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPhone"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtSobreMi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtEmail"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnMessage"
        style="@style/TextView.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/button_enter"
        android:text="Mensaje nuevo"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnAceptar"
        style="@style/TextView.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtSobreMi"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/txtCiudad"
        android:background="@drawable/button_enter"
        android:text="Aceptar"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnRechazar"
        style="@style/TextView.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtSobreMi"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/txtCiudad"
        android:background="@drawable/button_enter"
        android:text="Rechazar"
        android:visibility="visible" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/imgAmigo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_action_edit"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>