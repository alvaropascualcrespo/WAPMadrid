<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.wapmadrid.activities.SplashActivity" >
	
	    <ImageView
	        android:id="@+id/imageSanidad"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/logo_sanidad" />
	
	    <TextView
	        android:id="@+id/textNombreCentro"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/imageSanidad"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:text="NombreCentro"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/textDireccionCentro"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textNombreCentro"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:text="DireccionCentro"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/textPoblacion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/imageSanidad"
	        android:layout_below="@+id/textDireccionCentro"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="20dp"
	        android:text="Poblacion"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/textCP"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textDireccionCentro"
	        android:layout_marginTop="20dp"
	        android:layout_alignRight="@+id/imageSanidad"
	        android:layout_marginRight="20dp"
	        android:text="CodigoPostal"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/textHorario"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/textCP"
	        android:layout_marginTop="20dp"
	        android:text="Horario"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/textTelefono"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/textHorario"
	        android:layout_marginTop="20dp"
	        android:text="Telefono"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <fragment
	        android:id="@+id/mapCentroMedico"
	        android:name="com.google.android.gms.maps.SupportMapFragment"
	        android:layout_width="wrap_content"
	        android:layout_height="300dp"
	        android:layout_alignParentBottom="true"
	        android:layout_below="@+id/textTelefono"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:layout_marginBottom="20dp"
	        class="com.google.android.gms.maps.SupportMapFragment" >

	     </fragment>
	
	</RelativeLayout>

</ScrollView>