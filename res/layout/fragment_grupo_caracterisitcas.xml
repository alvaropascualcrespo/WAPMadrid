<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.wapmadrid.activities.SplashActivity" >
	    
	    <ProgressBar
        android:id="@+id/pgCMDescripcion"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
	
	    <ImageView
	        android:id="@+id/imageSanidad"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/avatar_sanblas" />
	
	    <TextView
	        android:id="@+id/textInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textTelefono"
	        android:layout_below="@+id/textTelefono"
	        android:layout_marginTop="10dp"
	        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus cursus felis leo, in volutpat elit lacinia non. Morbi non maximus elit. Proin ac consequat nibh. Aenean posuere nisl fermentum risus tincidunt consequat. Vestibulum aliquet in felis ut fermentum. Cras ullamcorper massa mattis, eleifend erat id massa nunc."
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/textNombreCentro"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/imageSanidad"
	        android:layout_marginLeft="15dp"
	        android:layout_alignTop="@+id/imageSanidad"
	        android:text="Equipo A"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/textRuta"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textNombreCentro"
	        android:layout_alignLeft="@+id/textNombreCentro"
	        android:text="Ruta: San Blas"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <TextView
	        android:id="@+id/textNombreCapitan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/imageSanidad"
	        android:layout_below="@+id/imageSanidad"
	        android:layout_marginTop="5dp"
	        android:text="Capitan: Yuleska PÃ©rez"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/textTelefono"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/imageSanidad"
	        android:layout_below="@+id/textNombreCapitan"
	        android:text="Telefono Capitan: 673 86 39 55"
	        android:layout_marginTop="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <Button
       android:id="@+id/btnMessage"
       style="@style/TextView.Black"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="19dp"
       android:background="@drawable/button_enter"
       android:text="Solicitar ingreso"
       android:visibility="visible" />

	    <TextView
	        android:id="@+id/textHorario"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textRuta"
	        android:layout_below="@+id/textRuta"
	        android:text="L-X-V 11:00"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	</RelativeLayout>

</RelativeLayout>